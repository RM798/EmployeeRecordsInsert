 @model IEnumerable<EmployeeRecordsInsert.Models.EmployeeData>

@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Employee Code</th>
            <th>Employee Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Basic Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeCode</td>
                <td>@item.EmployeeName</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@(item.Gender ? "Male" : "Female")</td>
                <td>@item.Department</td>
                <td>@item.Designation</td>
                <td>@item.BasicSalary</td>
            </tr>
        }
    </tbody>
</table>
